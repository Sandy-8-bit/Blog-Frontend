@inject HttpClient Http
@inject NavigationManager Navigation

<div class="content-sec flex w-[1460px] justify-content-center">
    <div class="top-sec text-white">
        <h2>Popular topics</h2>
    </div>

    <!-- Category Filter -->
    <div class="categorys d-flex gap-5 text-white">
        <div class="itm" @onclick='() => FetchBlogsByCategory(null)'><a>All</a></div>
        <div class="itm" @onclick='() => FetchBlogsByCategory("Travel")'><a>Travel</a></div>
        <div class="itm" @onclick='() => FetchBlogsByCategory("Adventure")'><a>Adventure</a></div>
        <div class="itm" @onclick='() => FetchBlogsByCategory("Movie")'><a>Movie</a></div>
        <div class="itm" @onclick='() => FetchBlogsByCategory("Tech")'><a>Tech</a></div>
    </div>

    <div class="contnt">
        @if (blogs is null)
        {
            <p>Loading blogs...</p>
        }
        else if (blogs.Count == 0)
        {
            <p>No blogs found.</p>
        }
        else
        {
            @foreach (var blog in displayedBlogs)
            {
                <div class="card" @onclick="() => OpenModal(blog)">
                    <div class="card-image" >
                        <img src="@blog.ImageUrl" alt="@blog.Title">
                    </div>
                    <div class="card-content">
                        <p class="date">@blog.Date</p>
                        <h3 class="title">@blog.Title</h3>
                    </div>
                </div>
            }
        }
    </div>

    <!-- Blog Modal Popup -->
    @if (selectedBlog != null)
    {
        <div class="modal-overlay" @onclick="CloseModal">
            <div class="modal-content" @onclick:stopPropagation>
                <button class="close-btn" @onclick="CloseModal">&times;</button>
                <img src="@selectedBlog.ImageUrl" alt="@selectedBlog.Title">
                <h2>@selectedBlog.Title</h2>
                <p class="date">@selectedBlog.Date</p>
                <p class="category">Category: @selectedBlog.Category</p>
                <p class="description">@selectedBlog.Description</p>
            </div>
        </div>
    }
</div>

@code {
    private List<Slide> blogs = new();
    private List<Slide> displayedBlogs = new();
    private int maxDisplayCount = 6;
    private Slide? selectedBlog;

    protected override async Task OnInitializedAsync()
    {
        await FetchBlogsByCategory(null);
    }

    private async Task FetchBlogsByCategory(string? category)
    {
        try
        {
            string baseUrl = "https://localhost:7061";
            string url = category is null ? $"{baseUrl}/api/slider" : $"{baseUrl}/api/slider/category/{category}";

            blogs = await Http.GetFromJsonAsync<List<Slide>>(url) ?? new();
            displayedBlogs = blogs.Take(maxDisplayCount).ToList();
        }
        catch (HttpRequestException ex)
        {
            Console.WriteLine($"Error fetching blogs: {ex.Message}");
        }
    }

    private void OpenModal(Slide blog)
    {
        selectedBlog = blog;
    }

    private void CloseModal()
    {
        selectedBlog = null;
    }

    public class Slide
    {
        public string Id { get; set; } = string.Empty;
        public string ImageUrl { get; set; } = string.Empty;
        public string Category { get; set; } = string.Empty;
        public string Title { get; set; } = string.Empty;
        public string Date { get; set; } = string.Empty;
        public string Description { get; set; } = string.Empty;
    }
}

